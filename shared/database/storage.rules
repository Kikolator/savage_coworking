rules_version = '2';

// Helper function to check if user is admin
// Admin status is stored in Firestore user document, not auth token
function isAdmin() {
  return request.auth != null && 
    get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
}

// Helper function to check if user is signed in
function signedIn() {
  return request.auth != null;
}

service firebase.storage {
  match /b/{bucket}/o {
    // Desk images: admins can upload, authenticated users can read
    // Matches any file in desks/{deskId}/ directory
    match /desks/{deskId}/{fileName} {
      allow write: if isAdmin();
      allow read: if signedIn();
    }

    // Workspace logos: admins can upload, authenticated users can read
    // Matches any file in workspaces/{workspaceId}/ directory
    match /workspaces/{workspaceId}/{fileName} {
      allow write: if isAdmin();
      allow read: if signedIn();
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
